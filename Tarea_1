        "import math\n",
        "#FOrmula para calcular Ni(e^rt)\n",
        "\n",
        "Ni = float(input(\"Poblacion inicial: \"))\n",
        "R = float(input(\"Tasa de crecimiento (0-1): \"))\n",
        "T = float(input(\"Tiempo del experimento: \")) #Los input pide a el usuario los datos requeridos\n",
        "E = math.e #Aqui asignamos el valor de euler a la variable E\n",
        "\n",
        "def calculo(Ni,R,T,E):\n",
        "  if R == 1: #Dependiendo del numero que nos den en la tasa de cracimiento el sistema lo vera y seleccionara la opcion que corresponda\n",
        "    H = R * T\n",
        "    F = E ** H\n",
        "    G = F * Ni\n",
        "    print(F)\n",
        "  elif R == 0:\n",
        "    H = R * T\n",
        "    F = E ** H\n",
        "    G = F * Ni\n",
        "    print(F)\n",
        "  else:\n",
        "    print(\"Error tiempo  no valida\")\n",
        "\n",
        "calculo(Ni,R,T,E)"
