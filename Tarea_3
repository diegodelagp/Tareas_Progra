        "T_en_pantalla = [2,3,4.5,1,2,5.6,3] #Lista de tiempo de cada dia de la semana\n",
        "def calc(T_en_pantalla):\n",
        "  if len(T_en_pantalla) == 0: #Si no hay datos avienta un 0\n",
        "    print(\"0\")\n",
        "  else:\n",
        "    Total = sum(T_en_pantalla) #Suma totos los valores\n",
        "    Hor = Total/len(T_en_pantalla) #Los promedia a horas\n",
        "    print(f\"Tu promedio diario en horas es: {Hor:.2f}\")\n",
        "    Min = (lambda Hor,x: Hor * x)(Hor,60) #Los promedia a minutos\n",
        "    print(f\"Tu promedio diario en horas es_ {Min:.2f}\")\n",
        "calc(T_en_pantalla)"
