        "#RETO\n",
        "pedido_total = 0\n",
        "pedido = 0 #ambas variables inizializan en 0\n",
        "while pedido != \"4\":\n",
        "  pedido = input((\"Que gusta pedir 1 Pizza ($10), 2 Hamburguesa ($8), 3 Ensalada ($7) 4 salir: \"))#preunta al usuario sobre lo que desea ordenar\n",
        "  match pedido: #dependiendo del numero puesto el sistema a√±ade el valor de la orden al pedido total\n",
        "    case \"1\":\n",
        "      pedido_total = pedido_total + 10\n",
        "      print(f\"{pedido_total}\")\n",
        "    case \"2\":\n",
        "      pedido_total = pedido_total + 8\n",
        "      print(f\"{pedido_total}\")\n",
        "    case \"3\":\n",
        "      pedido_total = pedido_total + 7\n",
        "      print(f\"{pedido_total}\")\n",
        "    case \"4\": #si el usuario seleciona 4 se acaba el pedido y lanza el total\n",
        "      print(f\"tu total es {pedido_total}\")\n",
        "    case _: #si el usuario pone cualquier otra cosa manda error\n",
        "      print(\"VALOR NO VALIDO\")\n"
